<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/configurePowerButtonTriggerText">
        <ListPreference
            android:defaultValue="@string/activate_power_button_trigger"
            android:entries="@array/configurePowerTriggerDisableArray"
            android:entryValues="@array/configurePowerTriggerDisableValues"
            android:key="@string/powerButtonTriggerStatus_key"
            android:summary="@string/configure_power_button_trigger_summary"
            android:title="@string/PowerButtonTitle" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/changeTriggerPattern_header">
        <ListPreference
            android:defaultValue="5"
            android:entries="@array/initialClickArray"
            android:entryValues="@array/initialClickValues"
            android:key="@string/initialClicks_key"
            android:summary="@string/initialClicks_summary"
            android:title="@string/initialClicks_title" />
        <ListPreference
            android:defaultValue="6"
            android:entries="@array/initialTimeArray"
            android:entryValues="@array/initialTimeValues"
            android:key="@string/initialTime_key"
            android:summary="@string/initialTime_summary"
            android:title="@string/initialTime_title" />
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/confirmationWaitArray"
            android:entryValues="@array/confirmationWaitValues"
            android:key="@string/confirmationWaitTime_key"
            android:summary="@string/confirmationWaitTime_summary"
            android:title="@string/confirmationWaitTime_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Vibration Settings ">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/hapticFeedbackPatternArray"
            android:entryValues="@array/hapticFeedbackPatternValues"
            android:key="@string/hapticFeedbackVibrationPattern_key"
            android:summary="@string/hapticFeedbackVibrationPattern_summary"
            android:title="@string/hapticFeedbackVibrationPattern_title" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/alertSendingConfirmationArray"
            android:entryValues="@array/alertSendingConfirmationValues"
            android:key="@string/alertSendingConfirmationVibration_key"
            android:summary="@string/alertSendingConfirmationVibration_summary"
            android:title="@string/alertSendingConfirmationVibration_title" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/alertNotConfirmedArray"
            android:entryValues="@array/alertNotConfirmedValues"
            android:key="@string/alertNotConfirmed_key"
            android:summary="@string/alertNotConfirmed_summary"
            android:title="@string/alertNotConfirmed_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/redoTraining_header">
        <Preference
            android:key="@string/redoTraining_key"
            android:summary="@string/redoTraining_summary"
            android:title="@string/redoTraining_title" />
    </PreferenceCategory>
 <!--TODO Below part needs to be removed-->
    <PreferenceCategory android:title="Vibration Duration Settings ">
        <EditTextPreference
            android:defaultValue="400"
            android:key="shortVibration"
            android:summary="Enter the short vibration duration in ms, default is 400"
            android:title="Short Vibration"></EditTextPreference>
        <EditTextPreference
            android:defaultValue="200"
            android:key="shortPause"
            android:summary="Enter the short pause duration between short vibrations in ms,default is 200"
            android:title="Short Pause"></EditTextPreference>
        <EditTextPreference
            android:defaultValue="600"
            android:key="LongVibration"
            android:summary="Enter the long vibration duration in ms,default is 600"
            android:title="Long Vibration"></EditTextPreference>
        <EditTextPreference
            android:defaultValue="400"
            android:key="longPause"
            android:summary="Enter the long pause duration between long vibrations in ms, default is 400"
            android:title="Long Pause"></EditTextPreference>
    </PreferenceCategory>
</PreferenceScreen>